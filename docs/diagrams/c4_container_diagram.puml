@startuml C4_Container
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

title Container diagram for PromptCraft Hybrid System

Person(user, "User", "A user of the PromptCraft system.")

System_Boundary(c1, "PromptCraft Hybrid System") {
    Container(fastapi, "FastAPI Backend", "Python, FastAPI", "Provides the core API for the system.")
    Container(gradio, "Gradio UI", "Python, Gradio", "Provides the user interface for the system.")
    Container(qdrant, "Qdrant", "Vector Database", "Stores and searches vector embeddings.")
    Container(prefect, "Prefect", "Workflow Orchestration", "Manages background data processing tasks.")
    Container(zen_mcp, "Zen MCP Server", "Node.js", "Orchestrates AI agents and tools.")
}

Rel(user, gradio, "Uses", "HTTPS")
Rel(gradio, fastapi, "Sends requests to", "HTTPS")
Rel(fastapi, qdrant, "Reads from and writes to", "gRPC")
Rel(fastapi, prefect, "Triggers", "API Call")
Rel(fastapi, zen_mcp, "Sends requests to", "HTTPS")

@enduml
