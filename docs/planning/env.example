# .env.example - PromptCraft-Hybrid Phase 1 Enhanced with Context7
# Copy to .env and populate with your actual values

# === Core Services ===
QDRANT_HOST=192.168.1.16
QDRANT_PORT=6333

# === AI Models (Azure AI Foundry) ===
AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-01

# === Zen MCP Server ===
ZEN_SERVER_PORT=3000
ZEN_LOG_LEVEL=INFO
ZEN_ENDPOINT=http://zen-mcp:3000

# === GitHub Integration ===
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_API_URL=https://api.github.com

# === Context7 Search MCP (NEW) ===
# Sign up at https://upstash.com for free tier
CONTEXT7_API_KEY=your-context7-api-key-here
CONTEXT7_ENDPOINT=https://api.context7.com

# === Knowledge Ingestion ===
KNOWLEDGE_WEBHOOK_PORT=5000
KNOWLEDGE_DIR=./knowledge
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# === Gradio UI ===
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false

# === Logging & Monitoring ===
LOG_LEVEL=INFO
ENABLE_METRICS=true

# === Development/Debug ===
DEBUG_MODE=false
VERBOSE_LOGGING=false
