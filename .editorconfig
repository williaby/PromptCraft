root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.{md,markdown}]
max_line_length = 120
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{dockerfile,Dockerfile}]
indent_size = 2
