# PromptCraft-Hybrid Environment Configuration Template
# Copy this file to .env and update values for your environment

# Application Configuration
PROMPTCRAFT_APP_NAME=PromptCraft-Hybrid
PROMPTCRAFT_VERSION=0.1.0
PROMPTCRAFT_ENVIRONMENT=dev  # dev, staging, prod
PROMPTCRAFT_DEBUG=true

# API Configuration
PROMPTCRAFT_API_HOST=localhost
PROMPTCRAFT_API_PORT=7860

# Qdrant Configuration (external service)
# Default to localhost for local development, override with QDRANT_HOST for production
QDRANT_HOST=${QDRANT_HOST:-localhost}
QDRANT_PORT=${QDRANT_PORT:-6333}
QDRANT_URL=http://${QDRANT_HOST:-localhost}:${QDRANT_PORT:-6333}
PROMPTCRAFT_QDRANT_HOST=${QDRANT_HOST:-localhost}
PROMPTCRAFT_QDRANT_PORT=${QDRANT_PORT:-6333}

# MCP Server Configuration
PROMPTCRAFT_ZEN_MCP_HOST=localhost
PROMPTCRAFT_ZEN_MCP_PORT=3000

# Database Configuration (if needed)
PROMPTCRAFT_DATABASE_URL=postgresql://user:password@localhost:5432/promptcraft
PROMPTCRAFT_DB_POOL_SIZE=10
PROMPTCRAFT_DB_MAX_OVERFLOW=20
PROMPTCRAFT_DB_ECHO=false

# Security Configuration
# Generate strong keys for production use
PROMPTCRAFT_SECRET_KEY=dev-secret-key-change-in-production
PROMPTCRAFT_JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# External Services (Optional)
# PROMPTCRAFT_AZURE_OPENAI_API_KEY=your-azure-openai-key
# PROMPTCRAFT_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# PROMPTCRAFT_QDRANT_API_KEY=your-qdrant-api-key

# CORS Configuration
PROMPTCRAFT_ALLOWED_ORIGINS=["http://localhost:7860","http://localhost:3000"]

# Logging Configuration
PROMPTCRAFT_LOG_LEVEL=INFO
PROMPTCRAFT_LOG_FORMAT=json

# Development Configuration
PROMPTCRAFT_RELOAD=true
PROMPTCRAFT_WORKERS=1

# Encryption (for production)
# PROMPTCRAFT_ENCRYPTION_KEY=your-encryption-key
# PROMPTCRAFT_ENCRYPTED_ENV_FILE=/path/to/.env.prod.gpg