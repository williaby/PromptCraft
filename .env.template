# .env.template
# Copy this to .env for local development testing
# Environment Configuration for Local Development and CI Alignment

# Service Mocking Configuration
PROMPTCRAFT_ENABLE_SERVICE_MOCKING=true
PROMPTCRAFT_REDIS_HOST=localhost
PROMPTCRAFT_QDRANT_HOST=localhost

# Environment Type
CI_ENVIRONMENT=false

# Logging Configuration
LOG_LEVEL=DEBUG

# Redis Configuration (for local Docker services)
REDIS_URL=redis://localhost:6379

# Qdrant Configuration (external service)
# Default to localhost for local development, override with QDRANT_HOST for production
QDRANT_HOST=${QDRANT_HOST:-localhost}
QDRANT_PORT=${QDRANT_PORT:-6333}
QDRANT_URL=http://${QDRANT_HOST:-localhost}:${QDRANT_PORT:-6333}

# Application Configuration
PYTHONPATH=.
PYTHONDONTWRITEBYTECODE=1
PYTHONHASHSEED=random

# Testing Configuration
PYTEST_ADDOPTS=--cov=src --cov-report=term-missing --cov-fail-under=80

# Development Flags
DEBUG=true
DEVELOPMENT_MODE=true

# Network Security (override in production)
PROMPTCRAFT_TRUSTED_PROXY_1=${PROMPTCRAFT_TRUSTED_PROXY_1:-192.168.1.205}
PROMPTCRAFT_TRUSTED_PROXY_2=${PROMPTCRAFT_TRUSTED_PROXY_2:-192.168.1.16}
