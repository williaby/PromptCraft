# PromptCraft-Hybrid Environment Configuration Template
# Copy this file to .env and update values for your environment

# Application Configuration
PROMPTCRAFT_APP_NAME=PromptCraft-Hybrid
PROMPTCRAFT_VERSION=0.1.0
PROMPTCRAFT_ENVIRONMENT=dev  # dev, staging, prod
PROMPTCRAFT_DEBUG=true
PROMPTCRAFT_API_HOST=localhost
PROMPTCRAFT_API_PORT=7860

# Service Mocking Configuration
PROMPTCRAFT_ENABLE_SERVICE_MOCKING=true
PROMPTCRAFT_REDIS_HOST=localhost
PROMPTCRAFT_QDRANT_HOST=${QDRANT_HOST:-localhost}

# Environment Type
CI_ENVIRONMENT=false

# Logging Configuration
PROMPTCRAFT_LOG_LEVEL=INFO
PROMPTCRAFT_LOG_FORMAT=json
LOG_LEVEL=DEBUG

# Redis Configuration (for local Docker services)
REDIS_URL=redis://localhost:6379

# Qdrant Configuration (external service)
# Default to localhost for local development, override with QDRANT_HOST for production
QDRANT_HOST=${QDRANT_HOST:-localhost}
QDRANT_PORT=${QDRANT_PORT:-6333}
QDRANT_URL=http://${QDRANT_HOST:-localhost}:${QDRANT_PORT:-6333}
PROMPTCRAFT_QDRANT_HOST=${QDRANT_HOST:-localhost}
PROMPTCRAFT_QDRANT_PORT=${QDRANT_PORT:-6333}

# MCP Server Configuration
PROMPTCRAFT_ZEN_MCP_HOST=localhost
PROMPTCRAFT_ZEN_MCP_PORT=3000

# Database Configuration (if needed)
PROMPTCRAFT_DATABASE_URL=postgresql://user:password@localhost:5432/promptcraft
PROMPTCRAFT_DB_POOL_SIZE=10
PROMPTCRAFT_DB_MAX_OVERFLOW=20
PROMPTCRAFT_DB_ECHO=false

# Security Configuration
# Generate strong keys for production use
PROMPTCRAFT_SECRET_KEY=dev-secret-key-change-in-production
PROMPTCRAFT_JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# Authentication Configuration
# Cloudflare Access Configuration (for tunnel authentication)
PROMPTCRAFT_AUTH_ENABLED=true
PROMPTCRAFT_AUTH_MODE=cloudflare_simple

# User Tier Configuration
# Email whitelist - comma-separated emails and domains (e.g., user@example.com,@company.com)
PROMPTCRAFT_EMAIL_WHITELIST=user@example.com

# Admin Users (full access to all models and system features)
PROMPTCRAFT_ADMIN_EMAILS=admin@example.com

# Full Users (access to all models including premium)
PROMPTCRAFT_FULL_USERS=full-user@example.com

# Limited Users (access to free models only)
PROMPTCRAFT_LIMITED_USERS=limited-user@example.com

# Authentication Session Configuration
PROMPTCRAFT_SESSION_TIMEOUT=3600
PROMPTCRAFT_ENABLE_SESSION_COOKIES=true
PROMPTCRAFT_SESSION_COOKIE_SECURE=true

# Development/Testing Override (disable for production)
PROMPTCRAFT_DEV_MODE=false

# External Services (Optional)
# PROMPTCRAFT_AZURE_OPENAI_API_KEY=your-azure-openai-key
# PROMPTCRAFT_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# PROMPTCRAFT_QDRANT_API_KEY=your-qdrant-api-key

# CORS Configuration
PROMPTCRAFT_ALLOWED_ORIGINS=["http://localhost:7860","http://localhost:3000"]

# Development Configuration
PROMPTCRAFT_RELOAD=true
PROMPTCRAFT_WORKERS=1
PYTHONPATH=.
PYTHONDONTWRITEBYTECODE=1
PYTHONHASHSEED=random

# Testing Configuration
PYTEST_ADDOPTS=--cov=src --cov-report=term-missing --cov-fail-under=80

# Development Flags
DEBUG=true
DEVELOPMENT_MODE=true

# Network Security (override in production)
PROMPTCRAFT_TRUSTED_PROXY_1=${PROMPTCRAFT_TRUSTED_PROXY_1:-192.168.1.205}
PROMPTCRAFT_TRUSTED_PROXY_2=${PROMPTCRAFT_TRUSTED_PROXY_2:-192.168.1.16}

# Encryption (for production)
# PROMPTCRAFT_ENCRYPTION_KEY=your-encryption-key
# PROMPTCRAFT_ENCRYPTED_ENV_FILE=/path/to/.env.prod.gpg
