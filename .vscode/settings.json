{
    "mcp": {
        "inputs": [],
        "servers": {
            "mcp-server-time": {
                "command": "python",
                "args": [
                    "-m",
                    "mcp_server_time",
                    "--local-timezone=America/Los_Angeles"
                ],
                "env": {}
            }
        }
    },
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "-m",
        "not slow and not performance and not stress",
        "--ignore=agents-backup"
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.testing.pytest.path": ["poetry", "run", "pytest"],
    "python.defaultInterpreterPath": ".venv/bin/python",
    "python.testing.cwd": "${workspaceFolder}",
    "python.envFile": "${workspaceFolder}/.env",
    "python.terminal.activateEnvironment": false,
    "python.analysis.extraPaths": ["src"],
    "python.analysis.autoImportCompletions": true,
    "python.testing.coverageEnabled": true,
    "python.testing.coverageArgs": [
        "--cov=src",
        "--cov-report=html",
        "--cov-report=xml:coverage.xml",
        "--junitxml=reports/junit.xml",
        "--cov-report=term",
        "--ignore=agents-backup"
    ],
    "ai-tools": {
        "validation": {
            "enabled": true,
            "checkOnOpen": true,
            "createTemplates": true,
            "tools": ["claude", "copilot", "gemini", "qwen", "codex"]
        },
        "integration": {
            "claude": {
                "enabled": true,
                "configPath": ".claude/settings.json"
            },
            "copilot": {
                "enabled": true,
                "configPath": ".github/copilot.yml"
            },
            "gemini": {
                "enabled": true,
                "configPath": ".gemini/config.json"
            }
        }
    }
}
