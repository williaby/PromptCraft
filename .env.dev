# Development Environment Configuration
# ====================================
# This file contains development-specific settings for PromptCraft-Hybrid.
# These settings override any values in the base .env file.

# Application Configuration
PROMPTCRAFT_APP_NAME=PromptCraft-Hybrid-Dev
PROMPTCRAFT_VERSION=0.1.0-dev
PROMPTCRAFT_ENVIRONMENT=dev
PROMPTCRAFT_DEBUG=true

# API Server Configuration
PROMPTCRAFT_API_HOST=0.0.0.0
PROMPTCRAFT_API_PORT=7860

# Development-specific settings
# Add any dev-only configuration here

# MCP (Model Context Protocol) Configuration
# ==========================================
# Disable HTTP-based MCP integration in favor of direct stdio MCP servers
# The actual MCP servers are configured in .mcp.json
PROMPTCRAFT_MCP_ENABLED=false
PROMPTCRAFT_MCP_SERVER_URL=http://localhost:3000  # Not used when MCP_ENABLED=false
PROMPTCRAFT_MCP_API_KEY=
PROMPTCRAFT_MCP_TIMEOUT=30.0
PROMPTCRAFT_MCP_MAX_RETRIES=3
PROMPTCRAFT_MCP_HEALTH_CHECK_INTERVAL=60.0

# Zen MCP Hub Optimization Configuration
# =====================================
# Enable intelligent tool filtering to reduce context window usage by 60-80%
ZEN_HUB_ENABLED=true
ZEN_HUB_FILTERING=true
ZEN_HUB_MAX_TOOLS=25
ZEN_HUB_DETECTION_TIMEOUT=5
ZEN_HUB_LOGGING=true
