# Git attributes for PromptCraft-Hybrid
# Configures diff exclusions and file handling

# Mark generated files - excluded from diffs in PRs
dist/** linguist-generated=true
build/** linguist-generated=true
*.min.js linguist-generated=true
*.min.css linguist-generated=true

# Mark vendored dependencies - excluded from language stats and diffs
vendor/** linguist-vendored=true
node_modules/** linguist-vendored=true
.venv/** linguist-vendored=true

# Lock files - mark as generated
package-lock.json linguist-generated=true
poetry.lock linguist-generated=true
yarn.lock linguist-generated=true
Pipfile.lock linguist-generated=true

# Binary files - ensure proper handling
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary

# Documentation files
*.md linguist-documentation=true
docs/** linguist-documentation=true

# Ensure consistent line endings
* text=auto eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# Python files should always use LF
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Shell scripts should always use LF
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
